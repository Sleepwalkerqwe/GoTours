extend base

block content
    main.header-logo-page
    .reset-form
        h2.heading-secondary.ma-bt-lg Reset password
        form.form.form--reset

            .form__group
                label.form__label(for='password') Password
                input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
                label.form__label(for='password') Repeat your password
                input#passwordConfirm.form__input(type='password', placeholder='••••••••', required, minlength='8')

            .form__group
                button.btn.btn--green Reset password
    main.footer-logo-page